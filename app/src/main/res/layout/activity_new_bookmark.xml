<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
    <TextView android:id="@+id/text_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Name" />
    <EditText android:id="@+id/edit_name" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/text_frequency" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Frequency" />
    <EditText android:id="@+id/edit_frequency" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="18sp" />

    <Button android:id="@+id/button_save" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Save" />

</LinearLayout>
